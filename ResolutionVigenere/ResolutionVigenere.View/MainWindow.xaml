<Window x:Class="ResolutionVigenere.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Vigenere Resolution" Height="350" Width="525"
        DataContext="{Binding Source={StaticResource Main}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBox x:Name="tbText" Text="{Binding Path=VigenereText.Text, UpdateSourceTrigger=PropertyChanged}" Margin="10" Height="70" TextWrapping="Wrap" CharacterCasing="Upper" AcceptsReturn="True" />
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="tbKeyLength" Text="{Binding Path=VigenereText.KeyLength, UpdateSourceTrigger=PropertyChanged}" Margin="10" Width="50" HorizontalAlignment="Left" />
                <TextBox x:Name="tbMargeError" Text="{Binding Path=VigenereText.MargeError, UpdateSourceTrigger=PropertyChanged}" Margin="10" Width="50" HorizontalAlignment="Left" />
            </StackPanel>
        </StackPanel>

        <Button Grid.Row="1" Content="Search key" Height="40" Margin="10" Command="{Binding Path=SearchKeysCommand}" />

        <ListBox Grid.Row="2" x:Name="lbPotentialKeys" Margin="10" ItemsSource="{Binding Path=VigenereText.PotentialKeys}" />
    </Grid>
</Window>
